-- Create the Applicant table
CREATE TABLE Applicant (
    applicant_id SERIAL PRIMARY KEY,
    first_name VARCHAR(50),
    last_name VARCHAR(50),
    phone_number VARCHAR(20),
    email VARCHAR(100),
    national_id VARCHAR(20)
);

-- Create the Payment table
CREATE TABLE Payment (
    payment_id SERIAL PRIMARY KEY,
    applicant_id INT REFERENCES Applicant(applicant_id),
    transaction_id VARCHAR(100),
    amount DECIMAL(10, 2),
    payment_date DATE
);

-- Create a table to store the knowledge test questions
CREATE TABLE knowledge_test_questions (
    id SERIAL PRIMARY KEY,
    question_text TEXT NOT NULL,
    correct_answer BOOLEAN NOT NULL
);

-- Insert the two questions into the table
INSERT INTO knowledge_test_questions (question_text, correct_answer)
VALUES 
    ('The legal drinking age in Lesotho is 18 years old.', true),
    ('Using a mobile phone while driving is permitted at all times.', false);

-- Create the DrivingTest table
CREATE TABLE DrivingTest (
    test_id SERIAL PRIMARY KEY,
    applicant_id INT REFERENCES Applicant(applicant_id),
    test_date DATE,
    result VARCHAR(10)
);

-- Create the ApplicantInfo table
CREATE TABLE ApplicantInfo (
    applicant_id INT PRIMARY KEY REFERENCES Applicant(applicant_id),
    date_of_birth DATE,
    address TEXT,
    gender VARCHAR(10)
);

